<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= docTitle %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

</head>

<% var activeShop,activeAddProduct,breadcrumb; %>
<% var  activeProductList,activeCart,activeCheckout,activeProductManage; %>

<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">My Store</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item <% if(activeShop){%>active<%}%>">
                        <a class="nav-link" href="/">Shore</a>
                    </li>
                    <li class="nav-item <% if(activeProductList){%>active<%}%>">
                        <a class="nav-link" href="/product-list">Product List</a>
                    </li>
                    <li class="nav-item <% if(activeCart){%>active<%}%>">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>
                    <li class="nav-item <% if(activeCheckout){%>active<%}%>">
                        <a class="nav-link" href="/checkout">Checkout</a>
                    </li>

                    <li class="nav-item <% if(activeAddProduct){%>active<%}%>">
                        <a class="nav-link" href="/admin/add-product">Add Product</a>
                    </li>
                    <li class="nav-item <% if(activeProductManage){%>active<%}%>">
                        <a class="nav-link" href="/admin/products">Product Manage</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>

    <% if(breadcrumb){%>
    <%- include('./breadcrumb.ejs') %>
    <%}%>
    <main class=" container p-5">